<!-- Top Navigation Menu -->
<div class="topnav">
  <a href="/" class="active d-flex justify-content-center"> <%= image_tag "fashionlogo.svg", class:'logo' %></a>
  <div id="myLinks">
    <a href="#news">News</a>
    <a href="#contact">Contact</a>
    <a href="#about">About</a>
  </div>
  <a href="javascript:void(0);" class="icon" onclick="myFunction()">
    <i class="fa fa-bars"></i>
  </a>
</div>
