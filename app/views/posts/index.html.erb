<p style="color: green"><%= notice %></p>

<div class="userContent container p-5  text-white">

<% if current_user %>
    <h2> Hello <%= current_user.username%> ! </h2>
      <h4><%= current_user.role%></h4>
        
        <%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete ,class: 'btn btn-danger' %>
     
      <% if current_user.admin? %>
        How many admins <%= User.count %>
      <% end %>
    
</div>

<div class="container p-5">

<h1>Posts</h1>

<%= link_to " New ", new_post_path , class: 'btn btn-primary fa-regular fa-plus' %>


<div id="posts">
<% @posts.each do |post| %>

    <%= render post %>

  <% end %>
</div>

</div>

    <% else %>
<p> Hi there ! </p> 
<%end%>
