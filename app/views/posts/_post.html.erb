<div id="<%= dom_id post %>">
    <div class="container">
    <%= image_tag %>
        <div class="card text-center m-5">
            <div class="card-header">
              <%= post.category%>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"></p>
              <%= link_to "Go to Post", post , class:'btn btn-secondary' %>
            </div>
            <div class="card-footer text-muted">
                  <%= button_to "Destroy", post, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'btn btn-danger'%>
            </div>
        </div>
    </div>
</div>
