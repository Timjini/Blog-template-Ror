<section>
  <div class="container p-2">
    <%= form_with(model: @post , local: true) do |form| %>
      <% if post.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="p-2">
        <% if @post.image.attached? %>
          <%= image_tag @post.image, style: "width:200px; display:block" %>
        <%end%>
      </div>

      <div class="p-2">
        <%= form.text_field :title , class: 'form-control', placeholder: 'Title' %>
      </div>

      <div class="p-2">
        <%= form.label :image %>
        <%= form.file_field :image, class: "form-control" %>
      
      </div>
      <div class="p-2">
        <%= form.select :category,  options_for_select(Post.categories.map {|key, value| [key.titleize, Post.categories.key(value)]}, @post.category) , class: 'form-select' %>
      </div>
      
       <div class="p-2">
        <%= form.rich_text_area :body , class: 'form-control', placeholder: 'Post Here', style:" height:50vh" %>
      </div>

      <div class="p-2">
        <%= form.submit "Submit", class: 'btn btn-success'%>
      </div>
  </div>
</section>
<% end %>
