<p style="color: green"><%= notice %></p>

<div class="container p-2">
      <div class=" p-2">
      <% if user_signed_in? %>
      <%= link_to "Edit", edit_post_path(@post) , class: 'btn btn-secondary fa-solid fa-pen-to-square' %> 
        <%= link_to "Back", posts_path,  class: 'btn btn-warning fa-regular fa-circle-left' %>
        <%else%>
      </div>
      <%end%>
      <% if @post.image.attached? %>
      <div class= "row">
      <%= image_tag @post.image, 
              style: "
              width:100%;
              height:auto;
              max-height:70vh;
              display:flex
              " %>
      </div>
      <%end%>
        <h1 class="text-center"><%=@post.title %></h1>
        <%= @post.body %>
</div>


